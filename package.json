{
    "name": "livebooster",
    "version": "1.0.0",
    "description": "A tool to boost live streaming metrics",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder build --win --mac",
        "build:win": "electron-builder build --win --x64",
        "build:win-arm64": "electron-builder build --win --arm64",
        "build:mac": "electron-builder build --mac",
        "postinstall": "node scripts/download-chrome.js"
    },
    "dependencies": {
        "axios": "^1.6.7",
        "cheerio": "^1.0.0-rc.12",
        "puppeteer-core": "^22.0.0",
        "zip-lib": "^1.1.2"
    },
    "devDependencies": {
        "electron": "^30.0.0",
        "electron-builder": "^26.0.12"
    },
    "author": "",
    "license": "MIT",
    "build": {
        "appId": "com.livebooster.app",
        "productName": "LiveBooster",
        "directories": {
            "buildResources": "build"
        },
        "extraResources": [
            {
                "from": "chrome-win",
                "to": "chrome-win",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "build/icon.icns",
            "category": "public.app-category.utilities"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "build/icon.ico"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "build/icon.png"
        }
    }
}
